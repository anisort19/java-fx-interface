<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.lab1.FunctionController">

    <padding>
        <Insets top="14" right="14" bottom="14" left="14"/>
    </padding>

    <Label text="Обчислення значення функції у заданій точці"
           style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints minWidth="140"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Точка x:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>

        <Spinner fx:id="xSpinner"
                 GridPane.rowIndex="0"
                 GridPane.columnIndex="1"
                 maxWidth="Infinity"/>

        <Label text="Оберіть функцію:"
               GridPane.rowIndex="1"
               GridPane.columnIndex="0"/>

        <VBox spacing="10"
              GridPane.rowIndex="1"
              GridPane.columnIndex="1">

            <fx:define>
                <ToggleGroup fx:id="functionsGroup"/>
            </fx:define>

            <HBox spacing="12">
                <RadioButton fx:id="f1Radio"
                             text="y = (2^(x+1) + 10) / 4 + 9 / 2^(145x − 2)"
                             toggleGroup="$functionsGroup"
                             selected="true"/>
                <Label fx:id="f1Result"
                       text="Результат: —"
                       wrapText="true"
                       maxWidth="Infinity"
                       HBox.hgrow="ALWAYS"/>
            </HBox>

            <HBox spacing="12">
                <RadioButton fx:id="f2Radio"
                             text="y = 2·sin(x) − cos(x^4)"
                             toggleGroup="$functionsGroup"/>
                <Label fx:id="f2Result"
                       text="Результат: —"
                       wrapText="true"
                       maxWidth="Infinity"
                       HBox.hgrow="ALWAYS"/>
            </HBox>

        </VBox>

    </GridPane>

    <Separator/>

    <Button text="Обчислити"
            onAction="#onCalculate"
            maxWidth="Infinity"/>

</VBox>
